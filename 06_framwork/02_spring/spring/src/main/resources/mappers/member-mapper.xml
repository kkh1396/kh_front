<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.spring.model.dao.MemberDao">

  <insert id="insertMember" >
     insert into member ( 
				    user_id 
				    ,user_pwd
				    ,user_name
				    ,email
				    ,gender
				    ,age
				    ,phone
				    ,address)
   		 values (
		        #{userId}
		        ,#{userPwd}
		        ,#{userName}
		        ,#{email}
		        ,#{gender}
		        ,#{age}
		        ,#{phone}
		        ,#{address}
		        )
  </insert>
  
  <select id="loginMember" resultType="Member">
       select user_id
       		 ,user_pwd
       		 ,user_name
       		 ,email
       		 ,gender
       		 ,age
       		 ,phone
       		 ,address 
       from member 
       where user_id = #{userId}
       	   <!-- and user_pwd = #{userPwd}  -->
       	   and status = 'Y'
  
  </select>
  
  <update id="updateMember">
  		update member set 
                email = #{email}
                ,age = #{age}
                ,phone = #{phone}
                ,address = #{address}
                where user_id = #{userId}
  </update>
  
</mapper>